<div class="menu-container">
  <div class="card-header col-md-12">
    <h2>
      {{article.article_title}}
    </h2>
  </div>
  <div class="article-stats">
    <p>
      Article number: {{article.id}}<br>
      Creation date: {{article.article_createDate}}
    </p>
  </div>
  <div class="article-content">
    <p>
      {{article.article_content}}
    </p>
  </div>
  <section class="flex-row justify-center">
    {{#each article.comment as |comment|}}
    <section class="card">        
        <div class="card-body">
          <p>{{comment.user_id}}</p>
          <p>{{comment.comment_createDate}}</p>  
          <p>{{comment.comment_content}}</p>
          <img src="/images/{{filename}}" alt="{{description}}">
        </div>
    </section>
    {{/each}}
  </section>


