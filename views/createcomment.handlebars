<div class="card">
  <div class="add-comment-container">
    <form class="new-comment-form">
      <label for="comment_content">Add your comment:</label>
      <br />
      <textarea id="comment_content" name="comment_content" rows="5" cols="30">
        {{comment_content}}
      </textarea>
      <br />
      <p id="article_id" style="display:none">{{article.articleId}}</p>
      <br />
      <button type="submit" value="Submit">Submit</button>
    </form>
  </div>
</div>

<script src="/js/add-comment.js"></script>
