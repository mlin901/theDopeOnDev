<div class="menu-container">
  <div class="add-article-container">
    <h2>Add a blog post!</h2>
    <form class="new-article-form">
      <label for="article_name">
        Article title:
      </label>
      <br />
      <textarea id="article_name" name="article_name" rows="2" cols="50">
      {{article_title}}
    </textarea>
      <br />
      <label for="article_content">
        Content:
      </label>
      <br />
      <textarea id="article_content" name="article_content" rows="8" cols="50">
      {{article_content}}
    </textarea>
      <br>
      <br>
      <button type="submit" class="btn btn-primary" value="Submit">
        Submit
      </button>
    </form>
  </div>
</div>

<script src="/js/add-article.js"></script>
